                        html += '<td>' + item.Notes + '</td>';

                        var jsonDate = new Date(+item.Sale_date.replace(/\/Date\((\d+)\)\//, '$1'));


                        // best for date formating
                        var d = new Date(jsonDate);
                        var day = d.getDate();
                        var month = d.getMonth() + 1;
                        var year = d.getFullYear();
                        if (day < 10) {
                            day = "0" + day;
                        }
                        if (month < 10) {
                            month = "0" + month;
                        }
                        var date = day + "/" + month + "/" + year;
                        // End Date formating

                        html += '<td>' + date + '</td>';

                        html += '</tr>';

                    });

                    $('.tbody').html(html);
                    } else {
                      
