                    if (result.length != 0) {
                    
                    var html = '';

                    $.each(result, function (key, item) {

                        html += '<tr>';

                        html += '<td style="padding-left:10px">' +
                            '<input type="checkbox" id = "BillNo" class = "all_checked" name="BillNo" value="' + item.ComBiNo_BillNo + '" />' +

