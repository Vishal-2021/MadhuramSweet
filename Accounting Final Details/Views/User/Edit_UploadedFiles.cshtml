
@model Accounting_Final_Details.Models.UploadFiles


@{
    ViewBag.Title = "Edit_UploadedFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="p-2">

    @Html.ActionLink("<< Back to List", "UplaodFiles", null, new { @Class = "btn btn-info btn-sm float-right" })
</h4>

<br />

<fieldset class="box">
    <legend class="box">Edit Documents !</legend>

    @using (Html.BeginForm("Edit_UploadedFiles", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-row">

            @*@Html.Hidden("RID", new { @class = "form-control", required = "required" })*@


            <div class="form-group col-md-3">
                <div class="">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="far fa-sticky-note" style="font-size:24px;padding-left:1px;padding-right:5px"></i>
                            </span>
                        </div>
                        @Html.TextArea("Notes", new { @class = "form-control", required = "required" })
                    </div>
                </div>
            </div>


            <div class="form-group col-md-3">
                <div class="">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <span class="fas fa-file-upload"></span>
                            </span>
                        </div>
                        @Html.TextBoxFor(model => model.files, "", new { @type = "file", @multiple = "multiple", @class = "form-control", required = "required" })
                    </div>
                </div>
            </div>


            <div class="form-group col-md-2">
                <div class="">
                    <input type="submit" id="BtnSubmit" value="+ Add" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</fieldset>



<hr />






@foreach (var item in ViewBag.DownloadFilesList)
{
    <div class="row btn-light mb-1 p-2 border">

        <div class="col-md-11">
            <a href="~/UploadedFiles/@item.Utb_Name" style="text-decoration:none"><i class="far fa-file"></i> <b style="font-weight:600">@item.Utb_Name </b> </a>
        </div>
        <div class="col-md-1 text-right">
            <a href="/User/Edit_DeleteFiles/@item.Utb_ID"><i class="fas fa-times text-danger"></i></a>
        </div>

    </div>

}









<style>
    fieldset {
        border: 1px solid #ddd;
        border-left: 1px solid #ddd;
        padding: 6px;
        margin-bottom: 5px;
        width: 100%;
    }

    legend {
        width: auto;
        font-size: 15px;
        font-weight: 500;
    }

    #main:hover .box {
        border-color: #1b76c4;
    }
</style>