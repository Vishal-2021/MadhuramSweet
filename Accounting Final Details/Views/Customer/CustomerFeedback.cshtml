
@{
    ViewBag.Title = "CustomerFeedback";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}





<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">

<script src="~/Scripts/rating.js"></script>



@if (ViewBag.UploadStatus != null)
{

<div aria-live="polite" aria-atomic="true" style="position: relative;">
    <div class="toast" style="position: fixed; top: 5px; right: 5px;" data-delay="5000">
        <div class="toast-header" style="color:#6EC1E4;">
            @*<img src="~/Logo/download.png" class="rounded mr-2" alt="Na">*@
            <strong class="mr-auto font-weight-light">Message</strong>
            @*<small>11 mins ago</small>*@
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Feedback sended successfully !
        </div>
    </div>
</div>

}




<script>
    $(document).ready(function () {
        $('.toast').toast('show');
    });
</script>

<div class="container">
    <div class="imagebg"></div>
    <div class="row p-2" style="margin-top: 50px;margin-bottom: 50px">

        <div class="col-md-6 offset-md-3 pt-3 border rounded-lg" style="background:#fffff7">


            <h2>Feedback</h2>
            <p> Please provide your feedback below : </p>

            @using (Html.BeginForm("CustomerFeedback", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


                <div class="row">
                    <div class="col-sm-12 form-group">
                        <label style="font-weight:600">How do you rate your overall experience?</label>
                        <p>
                            <label class="radio-inline">
                                <input type="radio" name="F_Experiece" id="F_Experiece" value="bad" required>
                                Poor
                            </label>
                            &nbsp;
                            <label class="radio-inline">
                                <input type="radio" name="F_Experiece" id="F_Experiece" value="average" required>
                                Average
                            </label>
                            &nbsp;
                            <label class="radio-inline">
                                <input type="radio" name="F_Experiece" id="F_Experiece" value="good" required>
                                Good
                            </label>
                            &nbsp;
                            <label class="radio-inline">
                                <input type="radio" name="F_Experiece" id="F_Experiece" value="Very good" required>
                                Very good
                            </label>
                            &nbsp;
                            <label class="radio-inline">
                                <input type="radio" name="F_Experiece" id="F_Experiece" value="Excellent" required>
                                Excellent
                            </label>

                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 form-group">
                        <label for="comments"> Comments :</label>
                        <textarea class="form-control" type="textarea" name="F_Comments" id="F_Comments" placeholder="Your Comments" maxlength="6000" rows="7" required></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 form-group">
                        <label for="name"> Images :</label>
                        <input type="file" class="form-control" id="files" name="files" multiple>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-12 form-group">
                        <label for="rate"> Your rating :</label>
                        <div style="font-size:25px" id="review"></div>
                        <input type="hidden" name="F_Rating" id="starsInput" class="form-control form-control-sm">

                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12 form-group">
                        <button type="submit" class="btn btn-lg btn-warning btn-block">Send </button>
                    </div>
                </div>

            }








        </div>
    </div>
</div>


<script>
    $("#review").rating({
        "value": 1,
        "click": function (e) {
            console.log(e);
            $("#starsInput").val(e.stars);
        }
    });


</script>
